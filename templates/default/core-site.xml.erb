<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<!-- about these variables: http://archive.cloudera.com/cdh/3/hadoop/core-default.html -->
<!-- generated by chef, changes will be overwritten -->

<configuration>
  <% if @namenode_ip %>
    <property> <name>fs.default.name</name> <value>hdfs://<%= @namenode_ip %>:54310</value></property>
  <% end %>
  <% @options.each do |key, value| %>
    <property> <name><%= "#{key}" %></name> <value><%= "#{value}" %></value></property>
  <% end %>
</configuration>
